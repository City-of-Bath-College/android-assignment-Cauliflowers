<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context=".IntroductionActivity"
    >

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mainicon"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/introductionText"
        android:text="James&apos; Question App"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imgIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/bestScore"
        android:text="Current High Score is: "
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_above="@+id/btnPlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:text="Play!"
        android:textSize="24sp"
        android:padding="10dp"
        android:layout_below="@+id/introductionText"
        android:layout_alignLeft="@+id/btnHighScore"
        android:layout_alignStart="@+id/btnHighScore" />

    <Button
        android:id="@+id/btnHighScore"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnPlay"
        android:layout_centerHorizontal="true"
        android:text="High Scores"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnHighScore"
        android:layout_centerHorizontal="true"
        android:text="About"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:text="Clear Scores"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_below="@+id/btnAbout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>